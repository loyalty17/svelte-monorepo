{
	"name": "pnpm-turborepo-sveltekit",
	"description": "PNPM + Turborepo + Sveltekit",
	"version": "0.0.1",
	"author": "oneezy",
	"keywords": [
		"Svelte",
		"Sveltekit",
		"Turborepo",
		"PNPM",
		"Monorepo"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/oneezy/monorepo.git"
	},
	"license": "MIT",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"preview": "turbo run preview",
		"lint": "turbo run lint",
		"clean": "git clean -fXd",
		"test": "turbo run test",
		"prepare": "husky install",
		"commitlint": "commitlint"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.1",
		"@commitlint/config-conventional": "^17.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.4.2",
		"prettier": "^2.6.2",
		"turbo": "latest"
	},
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert",
          "config",
          "no-release"
        ]
      ]
    }
  },
	"type": "module"
}
