{
	"name": "pnpm-turborepo-sveltekit",
	"description": "PNPM + Turborepo + Sveltekit",
	"version": "0.0.1",
	"author": "oneezy",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"preview": "turbo run preview",
		"lint": "turbo run lint",
		"clean": "git clean -fXd",
    "test": "turbo run test",
    "prepare": "husky install"
	},
  "lint-staged": {
    "apps/**/*.{js,ts,svelte,svx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,svelte,svx}": [
      "eslint --fix"
    ]
  },
	"devDependencies": {
		"husky": "^8.0.1",
		"lint-staged": "^12.4.2",
		"prettier": "^2.6.2",
		"turbo": "latest"
	},
	"keywords": [
		"Svelte",
		"Sveltekit",
		"Turborepo",
		"PNPM",
		"Monorepo"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/oneezy/monorepo.git"
	},
	"license": "MIT",
	"type": "module"
}
